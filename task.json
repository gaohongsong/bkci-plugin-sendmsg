{
    "atomCode": "sendmsg",
    "execution": {
        "packagePath": "sendmsg-6.0.0.tar.gz",
        "language": "python",
        "demands": [
            "pip install sendmsg-6.0.0.tar.gz"
        ],
        "target": "sendmsg"
    },
    "input": {
        "send_by": {
            "label": "消息发送方式",
            "type": "atom-checkbox-list",
            "list": [
                {
                    "id": "weixin",
                    "name": "企业微信",
                    "disable": false,
                    "desc": "消息会发送到企业微信应用号，需先在ESB配置企业微信应用号信息"
                }, 
                {
                    "id": "mail",
                    "name": "邮件",
                    "disable": false,
                    "desc": "发送到邮件,支持蓝鲸用户以及非蓝鲸用户"
                }
            ]
        },
        "weixin_receiver": {
            "label":"企业微信消息接收人",
            "default":"",
            "placeholder":"用户名,如ponyma",
            "type":"user-input",
            "inputType": "all",
            "desc":"使用分号;分隔多个用户名",
            "required": true,
            "rely": {
                "operation": "AND",
                "expression":[{
                    "key": "send_by",
                    "value": ["weixin"]
                }]
            }
        },
        "mail_receiver":{
            "label": "邮件接收人",
            "default":"",
            "placeholder":"用户名或者邮箱地址，如ponyma;ponyma@tencent.com",
            "type":"vuex-input",
            "desc":"使用分号;分隔多个接收人,接收人可以是蓝鲸用户名，或者邮箱地址",
            "required": true,
            "rely": {
                "operation": "AND",
                "expression":[{
                    "key": "send_by",
                    "value": ["mail"]
                }]
            }
        },
        "title": {
            "label":"标题",
            "default":"",
            "placeholder":"标题",
            "type":"vuex-input",
            "desc":"企业微信消息标题或邮件标题，可使用变量${var}",
            "required": true,
            "rely":{
                "operation": "OR",
                "expression":[
                    {
                        "key": "send_by",
                        "value": "weixin"
                    },
                    {
                        "key": "send_by",
                        "value": "mail"
                    }
                ]
            }
        },
        "content": {
            "label": "消息内容",
            "default": "",
            "type": "vuex-textarea",
            "disabled": false,
            "hidden": false,
            "isSensitive": false,
            "desc": "消息内容，可使用变量${VAR}",
            "required": true,
            "rely":{
                "operation": "OR",
                "expression":[
                    {
                        "key": "send_by",
                        "value": "weixin"
                    },
                    {
                        "key": "send_by",
                        "value": "mail"
                    }
                ]
            }
        },
        "attachment": {
            "label": "邮件附件",
            "defaut": "",
            "placeholder": "文件名，如error.log",
            "type":"vuex-input",
            "desc":"仅支持发送位于WORKSPACE中的文件，为空默认不发送",
            "rely": {
                "operation": "AND",
                "expression": [
                    {
                        "key": "send_by",
                        "value": "mail"
                    }
                ]
            }
        },
        "send_by_robot": {
            "label": "",
            "type": "atom-checkbox",
            "default": false,
            "text": "发送至企业微信群机器人",
            "desc": ""
        },
        "robot_key": {
            "label":"机器人webhook key",
            "default":"",
            "placeholder":"机器人webhook key",
            "type":"vuex-input",
            "desc":"企业微信机器人webhook key，建议使用凭证管理",
            "required": true,
            "rely": {
                "operation": "AND",
                "expression": [
                    {
                        "key": "send_by_robot",
                        "value": true
                    }
                ]
            }
        },
        "msgtype": {
            "label": "消息类型",
            "type": "selector",
            "default": "text",
            "desc": "消息类型可以为text/markdown",
            "options": [
                {
                    "id": "text",
                    "name": "text",
                    "desc": "",
                    "disable": false
                },
                {
                    "id": "markdown",
                    "name": "markdown",
                    "desc": "",
                    "disable": false
                }
            ],
            "rely": {
                "operation": "AND",
                "expression": [
                    {
                        "key": "send_by_robot",
                        "value": true
                    }
                ]
            }
        },
        "mentioned": {
            "label": "@群成员",
            "type": "user-input",
            "inputType": "all",
            "default": "",
            "placeholder": "PonyMa;@all",
            "desc":"使用企业微信UserId，通过管理员后台可获取，分号分隔多个UserId",
            "rely": {
                "operation":"AND",
                "expression":[
                    {
                        "key":"send_by_robot",
                        "value": true
                    },
                    {
                        "key": "msgtype",
                        "value": "text"
                    }
                ]
            }
        },
        "robot_content": {
            "label": "群消息内容",
            "type": "vuex-textarea",
            "default": "",
            "placeholder": "消息类型为markdown时，可使用markdown语法",
            "desc":"消息类型为markdown时，可使用markdown语法",
            "required": true,
            "rely": {
                "operation": "AND",
                "expression": [
                    {
                        "key": "send_by_robot",
                        "value": true
                    }
                ]
            }
        },
        "artifact": {
            "label":"发送文件",
            "default":"",
            "placeholder":"文件名，如error.log",
            "type":"vuex-input",
            "desc":"仅支持发送位于WORKSPACE中的文件，为空默认不发送",
            "rely": {
                "operation": "AND",
                "expression": [
                    {
                        "key": "send_by_robot",
                        "value": true
                    }
                ]
            }
        }
    }
}